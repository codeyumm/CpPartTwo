@model CpPartOne.Models.Teacher

<!-- JS FILE for delete confirmation -->

@Scripts.Render("~/Scripts/deleteConfirm.js")
@{
    ViewBag.Title = "Show";
}

<!-- JS for to ask user to confirm delete operation -->



<div class="top-container">
    <a href="~/Teacher/list" class="back-link">Back to list</a>
    <a href="~/Teacher/remove/@Model.TeacherId" class="back-link myBtn"> Delete @Model.TeacherFname @Model.TeacherLname</a>

</div>

<!-- Image source - User profile icons created by Tanah Basah - Flaticon -->

<div class="wrapper">
    <div class="show-container">
        <img src="~/Content/Images/avatar-image.png" alr="avatar photo of person" class="avatar" />
        <p>Emloyee number : @Model.EmployeeNumber</p>
        <p>Fullname : @Model.TeacherFname @Model.TeacherLname</p>
        <p>Hiring date : @Model.HireDate</p>
        <p> Salary : @Model.Salary</p>

        @if (@Model.ClassName != null)
        {
            foreach (var c in Model.ClassName)
            {
                <p> Class name : @c</p>
            }
        }


    </div>
</div>
